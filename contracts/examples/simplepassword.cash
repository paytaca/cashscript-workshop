pragma cashscript ^0.11.0;                 // 1
//
/**
This is one the simplest smart contract. It locks funds with a hardcoded password.
Anyone who knows the password can unlock the funds.
*/
contract Password() {                      // 2: Contract with no parameters
    function spend(bytes password) {        // 3: Spend requires a password
        require(password == bytes("mysecret"));     // 4: Check password matches hardcoded string
    }
}

